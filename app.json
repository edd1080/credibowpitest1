{
  "expo": {
    "name": "AppCredit",
    "slug": "appcredit-guatemala",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "appcredit",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "AppCredit necesita acceso a la cámara para escanear documentos y tomar fotos de solicitudes de crédito.",
        "NSLocationWhenInUseUsageDescription": "AppCredit necesita acceso a la ubicación para registrar las coordenadas GPS de cada solicitud de crédito."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      "expo-camera",
      "expo-location",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}